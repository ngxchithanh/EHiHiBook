@model IEnumerable<EHiHiBook.Models.Book>

@{
    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item active">Product</li>

    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Books
            <a href="../Admin/AddBook" class="btn btn-info pull-right fa fa-plus">Add new book</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Name Book</th>
                            <th>Images</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Name Book</th>
                            <th>Images</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            int count = 1;
                            <tr>
                                <td>@count</td>
                                <td>@item.BookName</td>
                                <td>@item.Images</td>
                                <td>
                                    @Html.ActionLink("Edit", "EditBook", new { bookId = item.BookID })
                                    @Html.ActionLink("Delete", "DeleteBook", new { bookId = item.BookID })
                                </td>
                            </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

