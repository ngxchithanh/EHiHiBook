@model EHiHiBook.Models.Home.HomeIndexViewModel

@{
    ViewBag.Title = "HiHi Book Store";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/images/slide1.jpg" alt="1" style="width:100%;height:450px">
        </div>

        <div class="item">
            <img src="~/Content/images/slide2.jpg" alt="2" style="width:100%;height:450px">
        </div>

        <div class="item">
            <img src="~/Content/images/slide4.jpg" alt="3" style="width:100%;height:450px">
        </div>
        <div class="item">
            <img src="~/Content/images/slide3.jpg" alt="4" style="width:100%;height:450px">
        </div>
    </div>

    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <h2 style="text-align:center;margin-top:20px;margin-bottom:20px;">Book Store</h2>
</div>

<div class="container">
    <div style="margin-bottom:20px;margin-top:20px;" class="row product-container">
        @foreach (var item in Model.ListOfBooks)
        {
            <div class="col-md-3 col-sm-3 col-xs-6" style="margin-bottom:8px">
                <div class="thumbnail product-item" style="height:400px">

                    <img class="img-responsive" title="Click to details"
                         style="cursor:pointer; height:260px; width:100%"
                         src="~/Content/images/@item.Images" />

                    <div class="caption">
                        <h5>@item.BookName</h5>
                        <p>@item.Price.00 $</p>
                        <p>
                            @if (item.Quantity > 0)
                            {
                                using (Html.BeginForm("AddToCart", "Home", new { bookId = item.BookID, url = "Index" }, FormMethod.Post))
                                {
                                    <button type="submit" class="pull-right"><img src="~/Content/images/addtocart.png" style="width:20px;height:20px;" /></button>
                                }
                            <p>Available</p>
                        }
                        else
                        {
                            <p>Not Available</p>
                        }
                            </p>
                            <div></div>
                        </div>
                    </div>
                </div>

            }
    </div>
    <img style="width:100%;" src="~/Content/images/Banner_wingsbooks.jpg" alt="" />
</div>