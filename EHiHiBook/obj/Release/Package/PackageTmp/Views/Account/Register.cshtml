@model EHiHiBook.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<style>
    #form-register {
        position: absolute;
        top: 20%;
        left: 30%;
        border: 1px solid #ccc;
        padding: 50px 50px;
    }

        #form-register th {
            padding-bottom: 20px;
        }

        #form-register td {
            margin: 20px;
        }


    table {
        width: 500px;
    }

    .title-form {
        text-align: center;
        font-size: 30px;
    }

    .field-validation-error {
        color: red;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div id="form-register">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <table>
                <tr class="title-form">
                    <th colspan="2">Register</th>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.FirstName)</td>
                    <td>@Html.TextBoxFor(m => m.FirstName, new { style = "width:100%" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.FirstName)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.LastName)</td>
                    <td>@Html.TextBoxFor(m => m.LastName, new { style = "width:100%" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.LastName)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.UserName)</td>
                    <td>@Html.TextBoxFor(m => m.UserName, new { style = "width:100%" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.UserName)</td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.Email)</td>
                    <td>@Html.TextBoxFor(m => m.Email, new { style = "width:100%" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.Email)</td>
                </tr>
                <tr>
                    <td colspan="2">
                        @if (ViewBag.error != null)
                        {
                            <span class="file-validation-error">@ViewBag.error</span>
                        }
                    </td>
                </tr>





                <tr>
                    <td>@Html.LabelFor(m => m.Pass)</td>
                    <td>@Html.PasswordFor(m => m.Pass, new { style = "width:100%" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.Pass)</td>
                </tr>
                <tr>
                    <td colspan="2">
                        @if (ViewBag.error != null)
                        {
                            <span class="field-validation-error">@ViewBag.error</span>
                        }
                    </td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.ConfirmPassword)</td>
                    <td>@Html.PasswordFor(m => m.ConfirmPassword, new { style = "width:100%" })</td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationMessageFor(m => m.ConfirmPassword)</td>
                </tr>
                <tr>

                <tr>
                    <td></td>
                    <td>
                        <input class="btn btn-primary" type="submit" value="Register" />
                        <a class="btn btn-primary" href="@Url.Action("LogIn","Account")">Log in</a>
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
